<body>
<div id="dialogo"></div>

  <script>
    const texto = "";
    const velocidad = 50;
    const dialogo = document.getElementById("dialogo");
    let indice = 0;

    function mostrarTexto() {
      if (indice < texto.length) {
        dialogo.textContent += texto[indice];
        indice++;
        setTimeout(mostrarTexto, velocidad);
      }
    }

    mostrarTexto();
  </script>
