@{
    ViewData["Title"] = "Sala 4";
}

<div class="sala4-container">
    <h2>Haz clic en las ratitas üê≠ para golpearlas con el bate animado</h2>

    <div class="contenedor">
        <div class="juego" id="zonaJuego"></div>
        <div id="bate" class="bate"></div>
    </div>

    <form id="claveForm" action='@Url.Action("Sala4", "Home")' method="POST" style="display: none;">
        <input type="number" name="clave" id="claveInput" required>
        <button type="submit">Continuar</button>
    </form>
</div>

<script>
    // Funci√≥n para mostrar el formulario cuando se complete el juego
    function mostrarFormularioClave(clave) {
        document.getElementById('claveInput').value = clave;
        document.getElementById('claveForm').style.display = 'block';
    }
</script>