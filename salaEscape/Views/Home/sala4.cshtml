@{
    ViewData["Title"] = "Sala 4";
}
<link href="https://fonts.googleapis.com/css2?family=MedievalSharp&display=swap" rel="stylesheet">

<body class="sala4fondo">

<div class="sala4" id="juego-container" style="display: block;">
    <h1>Sala 4 - Los Murciélagos del Laboratorio</h1>
    <p class="instrucciones">Golpea a los murciélagos para descubrir el código secreto</p>

    <div class="juego-container">
        <div class="area-juego"></div>
        <div class="bate"></div>
    </div>

    <form id="formulario-codigo" method="post" style="display: none;">
        <input type="number" name="clave" id="input-codigo" required>
        <button type="submit">Enviar código</button>
    </form>
</div>

<script>
    function mostrarFormularioClave(clave) {
        document.getElementById('formulario-codigo').style.display = 'block';
    }
</script>

<style>
    .overlay {
        position: fixed;
        top: 0; left: 0;
        width: 100%; height: 100%;
        background: rgba(0,0,0,0.9);
        color: white;
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 9999;
        text-align: center;
        padding: 20px;
    }

    .contenido-instrucciones {
        max-width: 500px;
    }

    .contenido-instrucciones button {
        margin-top: 20px;
        padding: 10px 20px;
        font-size: 16px;
    }
</style>

</body>
