@{
    ViewData["Title"] = "Sala 2 - Ahorcado";
    var palabraJugada = ViewBag.PalabraJugada as List<char> ?? new List<char>();
    var letrasErradas = ViewBag.LetrasErradas as List<char> ?? new List<char>();
    var intentos = ViewBag.Intentos;
}
<body>

<img src="/images/ahorcado.png" alt="fondo" class="fondo-img">

<div class="sala2-container">
    <div class="ahorcado-container">
        <div class="palabra-container">
            @foreach (var letra in palabraJugada)
            {
                <span class="letra">@letra</span>
            }
        </div>

        <div class="letras-erradas">
            <h3>Letras incorrectas:</h3>
            <div class="letras-erradas-container">
                @foreach (var letra in letrasErradas)
                {
                    <span class="letra-errada">@letra</span>
                }
            </div>
        </div>

        <div class="intentos">
            <p>Intentos restantes: <strong>@intentos</strong></p>
            <form action='@Url.Action("IngresarLetra", "Home")' method="POST" class="form-letra">
                <input type="text" 
                       name="letra" 
                       maxlength="1" 
                       pattern="[a-zA-Z]" 
                       placeholder="Ingresa una letra" 
                       required 
                       autocomplete="off">
                <button type="submit" id="submitLetra">Probar Letra</button>
            </form>

            <form action='@Url.Action("IngresarPalabra", "Home")' method="POST" class="form-palabra">
                <input type="text" 
                       name="palabra" 
                       pattern="[a-zA-Z]+" 
                       placeholder="Arriesgar palabra completa" 
                       required 
                       autocomplete="off">
                <button type="submit" id="submitPalabra">Arriesgar palabra</button>
            </form>
        </div>
    </div>
</div>



<style>
body {
  margin: 0;
  padding: 0;
  font-family: 'Georgia', serif;
  color: #f5f0e6;
  background-color: #1b2b1b;
  overflow-x: hidden;
  position: relative;
}

.fondo-img {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  object-fit: cover;
  object-position: center center;
  z-index: -1;
  pointer-events: none;
}

.sala2-container {
  background-color: #2e3f2e;
  width: 700px;
  margin: 60px auto;
  padding: 40px;
  border-radius: 12px;
  border: 2px solid #a19b88;
  box-shadow: 0 0 15px rgba(0, 0, 0, 0.5);
}

.palabra-container {
  display: flex;
  justify-content: center;
  gap: 14px;
  margin-bottom: 30px;
  flex-wrap: wrap;
}

.letra {
  width: 50px;
  height: 50px;
  font-size: 28px;
  font-weight: bold;
  background-color: #3e4f3e;
  color: #e7e2d2;
  border: 2px solid #6c7a6c;
  border-radius: 6px;
  display: flex;
  align-items: center;
  justify-content: center;
  text-transform: uppercase;
  font-family: 'Georgia', serif;
}

.letras-erradas {
  text-align: center;
  margin-bottom: 25px;
}

.letras-erradas h3 {
  margin-bottom: 10px;
  color: #b56e6e;
  font-size: 20px;
  font-family: 'Garamond', serif;
}

.letras-erradas-container {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  gap: 10px;
}

.letra-errada {
  background-color: #5a2c2c;
  color: #f4e9e0;
  font-weight: bold;
  padding: 8px 14px;
  border-radius: 5px;
  text-transform: uppercase;
  box-shadow: 0 2px 5px rgba(90, 44, 44, 0.4);
  font-family: 'Georgia', serif;
}

.intentos {
  text-align: center;
  font-size: 18px;
  margin-bottom: 25px;
  color: #d5cba3;
}

.form-letra, .form-palabra {
  display: flex;
  gap: 10px;
}

input[type="text"] {
  flex: 1;
  padding: 12px;
  font-size: 16px;
  background-color: #444f44;
  color: #f5f0e6;
  border: 2px solid #6c7a6c;
  border-radius: 6px;
  transition: border-color 0.2s ease-in-out;
  font-family: 'Georgia', serif;
}

input[type="text"]:focus {
  border-color: #a9bfa9;
  outline: none;
}

button {
  padding: 12px 20px;
  background-color: #607d60;
  color: #fdfdfd;
  font-size: 16px;
  border: none;
  border-radius: 6px;
  cursor: pointer;
  box-shadow: 0 2px 4px rgba(60, 90, 60, 0.3);
  transition: background-color 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
  font-family: 'Georgia', serif;
}

button:hover {
  background-color: #4a5f4a;
  box-shadow: none;
}

/* Overlay estilos */
.overlay {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background-color: rgba(0,0,0,0.85);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999;
}

.contenido-instrucciones {
  background-color: #2e3f2e;
  padding: 30px 40px;
  border-radius: 15px;
  text-align: center;
  color: #d5cba3;
  max-width: 400px;
  box-shadow: 0 0 20px rgba(0,0,0,0.7);
}
</style>
<script>
  // Ya est√° arriba, solo agregar eventListener a submitPalabra para consistencia
  document.getElementById('submitPalabra').addEventListener('click', function () {
    this.textContent = this.textContent.toLowerCase();
  });
</script>
</body>
